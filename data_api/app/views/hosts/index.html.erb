<h1>Listing hosts</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Label</th>
    <th>Description</th>
  </tr>

<% @hosts.each do |host| %>
  <tr>
    <td><%=h host.url %></td>
    <td><%=h host.label %></td>
    <td><%=h host.description %></td>
    <td><%= link_to 'Show', host %></td>
    <td><%= link_to 'Edit', edit_host_path(host) %></td>
    <td><%= link_to 'Destroy', host, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New host', new_host_path %>