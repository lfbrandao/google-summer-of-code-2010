<% title "Search Directory" %>

<%= render :file => 'layouts/application' %> 

<div class="content">
	<div class="innerContent">
		<h1><%= yield :title%></h1>
		<hr/> <br/>
		
		<div class="searchDiv">
			<% form_tag '/hosts/search', :method => 'get' do %>
			  <p>
				<%= text_field_tag :uri, params[:uri], :size => "75", :style => "height: 20px"%>	
				<%= submit_tag "Search", :name => nil, :style => "height: 28px" %>
				<br>
				<label>(Comma separated list of URLs. Ex. - http://www.nytimes.com, http://www.guardian.co.uk)</label>
			  </p>
			<% end -%>
		<%= yield %>
	 	</div>
	</div>
</div>
<%= render :partial => "shared/footer" %>