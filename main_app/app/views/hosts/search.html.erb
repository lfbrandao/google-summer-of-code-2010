<div id="user_nav">  
	<% if user_signed_in? %>  
		Signed in as <%= current_user.email %>. Not you?  
		<%= link_to "Sign out", destroy_user_session_path %>  
	<% else %>  
		<%= link_to "Sign up", new_user_registration_path %> or  
		<%= link_to "Sign in", new_user_session_path %>  
	<% end %>  
</div>


<h1>Listing hosts</h1>

<% form_tag '/hosts/search', :method => 'get' do %>
  <p>
	<%= text_field_tag :uri, params[:uri]%>	
	<%= submit_tag "URI", :name => nil%>
  </p>
<% end -%>


<% @hosts.each do |uri, host_props| %>
	<h1>
	<%=h uri  %>  
	</h1>
	<table>
	  <tr>
	    <th>Field</th>
	    <th>Value</th>
	    <th>Database</th>
	  </tr>
	<% host_props.each do |host_prop| %>
  		<tr>	
		 	<td><%=h host_prop.name  %> </td>
		 	<td><%=h host_prop.value  %> </td>
		 	<td><%=h host_prop.value  %> </td> 	
		</tr>		
  	<% end %>
	</table>
<% end %>